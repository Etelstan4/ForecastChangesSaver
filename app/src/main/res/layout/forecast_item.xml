<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp">

    <TextView
        android:id="@+id/forecast_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="25dp"
        android:textSize="20sp"
        app:layout_constraintRight_toLeftOf="@+id/forecast_precipitation"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/forecast_precipitation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="25dp"
        app:layout_constraintLeft_toRightOf="@+id/forecast_date"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/forecast_t_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="25dp"
        app:layout_constraintBottom_toTopOf="@+id/forecast_t_min"
        app:layout_constraintLeft_toRightOf="@+id/forecast_precipitation"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/forecast_t_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/forecast_precipitation"
        app:layout_constraintTop_toBottomOf="@+id/forecast_t_max" />

</androidx.constraintlayout.widget.ConstraintLayout>

